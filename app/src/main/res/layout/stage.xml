<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.a_adam.displMessage.model.view.StageNumFragment"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_background">
        <RelativeLayout
            android:id="@+id/InnerRelativeLayout"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:background="@drawable/gradient_background"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/how_many_stages_entrance_have"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="5dp"
                android:textSize="50sp"
                android:maxLength="4"
                android:text="9"
                android:inputType="number"
                android:background="#ffffff"
                android:textColorHint="#000000"
                android:textColor="#000000"/>
            <TextView
                android:layout_height="15dp"
                android:layout_width="150dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="Этажей в доме/подъезде:"
                android:background="#00000000"
                android:textColor="#ffffff"/>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/flatMenu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_background">

        <Button
            android:id="@+id/next_button_stages_in_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="#333333"
            android:text="ok"
            android:textColor="#ffffff"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/prev_button_stages_in_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:text="назад"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>