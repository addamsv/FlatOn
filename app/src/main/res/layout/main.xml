<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/resultHint1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Для просмотра всего списка этажей подъезда необходимо кликнуть по синей таблице!"
        />

    <RelativeLayout
        android:id="@+id/resultBoard"
        android:layout_width="290dp"
        android:layout_height="140dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gradient_background">

        <!--список подъезда//-->
        <RelativeLayout
            android:id="@+id/entranceLayOut"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/upperFlatLayout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="0"
                />

            <TextView
                android:id="@+id/lowerFlatLayout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="41dp"
                android:gravity="center"
                android:textColor="#000066"
                android:textSize="20sp"
                android:text="0"
                />

            <TextView
                android:id="@+id/flatsOnFloorHint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:textColor="#000066"
                android:textSize="11sp"
                android:text="кв/этаж"
                />

            <TextView
                android:id="@+id/flatsOnFloorLayOut"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="93dp"
                android:gravity="center"
                android:textColor="#000066"
                android:textSize="16sp"
                android:text="0" />

            <TextView
                android:id="@+id/flatsLabelHint"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="4dp"
                android:text="квартиры"
                android:textColor="#000066"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/flatLabelSeparDot"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="..."
                android:textColor="#000066"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/entranceNumberLayout"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/entrance_background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:text="0"
                />


            <TextView
                android:id="@+id/entranceLabelHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="подъезд"
                />

            <TextView
                android:id="@+id/floorsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/floorsLayoutHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="100dp"
                android:text="этажей:"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/showEntranceList"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="#00000000"
                android:gravity="center"
                android:onClick="onEntranceButtonClick"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="4dp"
                android:background="#00000000"
                android:onClick="onDiapasonButtonClick" />
        </RelativeLayout>


        <!--Вывод номера этажа//-->
        <RelativeLayout
            android:id="@+id/flatLabelLayOut"
            android:layout_width="96dp"
            android:layout_height="125dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/flatNumberLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:textColor="#990000"
                android:textSize="20sp"
                android:text="0"
                />

            <TextView
                android:id="@+id/flatNumberHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:text="№ кв:"
                android:textColor="#990000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/floorLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/gradient_background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                android:text="0"
                />

            <TextView
                android:id="@+id/flatLabelHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="26dp"
                android:text="ЭТАЖ:"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/flatStackLayout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="104dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/flatStackLayoutHint"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="-я кв. на этаже"
                android:textColor="@android:color/white"
                android:textSize="8dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:onClick="onFlatNumButtonClick" />
        </RelativeLayout>
        <!--EoF Вывод номера этажа//-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resultMenu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_background">

        <Button
            android:id="@+id/save_button_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="#333333"
            android:text="find / save"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:onClick="onBottomMenuSaveButtonClick"/>

        <Button
            android:id="@+id/prev_button_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:text="назад"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>